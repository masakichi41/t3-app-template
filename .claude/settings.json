{
  "permissions": {
    "allow": [
      // explore
      "Bash(fd:*)",
      "Bash(cat:*)",
      // pnpm
      "Bash(pnpm install)",
      "Bash(pnpm dev)",
      "Bash(pnpm dev:all)",
      "Bash(pnpm build)",
      // lint
      "Bash(pnpm typecheck)",
      "Bash(pnpm lint)",
      "Bash(pnpm lint:fix)",
      "Bash(pnpm format)",
      "Bash(pnpm format:check)",
      // db
      "Bash(pnpm db:push)",
      "Bash(pnpm db:studio)",
      "Bash(pnpm db:generate)",
      "Bash(pnpm db:migrate)",
      "Bash(docker compose up -d)",
      "Bash(docker compose up)",
      "Bash(docker compose down)",
      "Bash(docker compose down -v)",
      "Bash(docker compose logs)",
      "Bash(docker compose logs -f)",
      // trash
      "Bash(rm:*)",
      "Bash(trash:*)",
      // mcp - context7
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      // mcp - playwright
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_snapshot",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_type",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_console_messages",
      "mcp__playwright__browser_network_requests",
      "mcp__playwright__browser_wait_for",
      // mcp - chakra-ui
      "mcp__chakra-ui__installation",
      "mcp__chakra-ui__get_component_example",
      "mcp__chakra-ui__get_component_props",
      "mcp__chakra-ui__list_components",
      "mcp__chakra-ui__get_theme",
      "mcp__chakra-ui__customize_theme"
    ],
    "deny": ["Bash(pnpm ci-check)"],
    "ask": [
      // pnpm
      "Bash(pnpm add:*)",
      "Bash(pnpm remove:*)",
      // git
      "Bash(git push)",
      "Bash(git commit -m:* )",
      "Bash(git merge)"
    ]
  },
  "enabledMcpjsonServers": [
    "context7",
    "playwright",
    "figma-dev-mode-mcp-server",
    "chakra-ui"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-edit-format.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
